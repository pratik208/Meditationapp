<!-- res/layout/item_doctor.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Doctor's Image -->
    <ImageView
        android:id="@+id/imageViewDoctor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_person_24"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <!-- Doctor's Name -->
    <TextView
        android:id="@+id/textViewDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="Dr. John Doe"/>

    <!-- Doctor's Designation -->
    <TextView
        android:id="@+id/textViewDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Cardiologist"/>

    <!-- Doctor's Experience -->
    <TextView
        android:id="@+id/textViewExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="15 years"/>

    <!-- Doctor's Specialist -->
    <TextView
        android:id="@+id/textViewSpecialist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Heart Specialist"/>

    <!-- Doctor's Mobile Number -->
    <TextView
        android:id="@+id/textViewMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="Mobile: 123-456-7890"/>

</LinearLayout>
